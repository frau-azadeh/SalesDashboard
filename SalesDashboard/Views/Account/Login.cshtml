@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold mb-6 text-center">ورود به سیستم</h2>

        <form asp-action="Login" method="post">
            <div class="mb-4">
                <label class="block mb-1 text-sm">نام کاربری</label>
                <input type="text" name="username" class="w-full px-3 py-2 border rounded" required />
            </div>

            <div class="mb-6">
                <label class="block mb-1 text-sm">رمز عبور</label>
                <input type="password" name="password" class="w-full px-3 py-2 border rounded" required />
            </div>

            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded">
                ورود
            </button>
        </form>
    </div>
</div>
