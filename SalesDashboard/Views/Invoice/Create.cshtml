@{
    ViewData["Title"] = "ایجاد فاکتور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-5xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 font-vazir">🧾 ایجاد فاکتور جدید</h2>

    <form id="invoiceForm" class="space-y-6">
        <div>
            <label class="block text-gray-700 mb-1 font-vazir">مشتری:</label>
            <select id="customerSelect" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
            </select>
        </div>

        <div class="grid grid-cols-4 gap-4 items-end">
            <div>
                <label class="block text-gray-700 mb-1 font-vazir">محصول:</label>
                <select id="productSelect" class="w-full border rounded p-2">
                </select>
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-vazir">قیمت واحد:</label>
                <input type="text" id="unitPrice" disabled class="w-full border rounded p-2 bg-gray-100 text-gray-600" />
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-vazir">تعداد:</label>
                <input type="number" id="quantity" class="w-full border rounded p-2" min="1" />
            </div>

            <button type="button" onclick="addToInvoice()" class="bg-blue-600 text-white rounded px-4 py-2 font-vazir hover:bg-blue-700">
                افزودن
            </button>
        </div>

        <div class="mt-6">
            <h3 class="text-lg font-semibold mb-2 font-vazir">لیست اقلام</h3>
            <table class="min-w-full table-auto border border-gray-200">
                <thead class="bg-gray-100 text-right">
                    <tr>
                        <th class="px-4 py-2">نام محصول</th>
                        <th class="px-4 py-2">تعداد</th>
                        <th class="px-4 py-2">قیمت واحد</th>
                        <th class="px-4 py-2">جمع</th>
                    </tr>
                </thead>
                <tbody id="invoiceItems">
                </tbody>
            </table>
        </div>

        <div class="text-right mt-4">
            <button type="submit" class="bg-green-600 text-white rounded px-6 py-2 font-vazir hover:bg-green-700">
                ثبت فاکتور
            </button>
        </div>
    </form>
</div>
