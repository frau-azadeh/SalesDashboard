@{
    ViewData["Title"] = "محصولات";
}

<div class="p-6 max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">لیست محصولات</h1>

    <table class="w-full border mb-6">
        <thead>
            <tr class="bg-gray-200">
                <th class="p-2 border">نام محصول</th>
                <th class="p-2 border">قیمت</th>
                <th class="p-2 border">موجودی</th>
            </tr>
        </thead>
        <tbody id="productList"></tbody>
    </table>

    <h2 class="text-lg font-semibold mb-2">افزودن محصول جدید</h2>
    <form id="productForm" class="space-y-4">
        <input type="text" id="name" placeholder="نام" class="w-full border p-2 rounded" required />
        <input type="number" id="price" placeholder="قیمت" class="w-full border p-2 rounded" required />
        <input type="number" id="stock" placeholder="موجودی" class="w-full border p-2 rounded" required />
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded">افزودن</button>
    </form>
</div>

<script>
    async function loadProducts() {
        const res = await fetch('/api/products');
        const data = await res.json();

        const list = document.getElementById('productList');
        list.innerHTML = '';

        data.forEach(p => {
            list.innerHTML += `
                <tr>
                    <td class="border p-2">${p.name}</td>
                    <td class="border p-2">${p.price.toLocaleString()}</td>
                    <td class="border p-2">${p.stock}</td>
                </tr>`;
        });
    }

    document.getElementById('productForm').addEventListener('submit', async e => {
        e.preventDefault();
        const product = {
            name: document.getElementById('name').value,
            price: parseFloat(document.getElementById('price').value),
            stock: parseInt(document.getElementById('stock').value)
        };

        await fetch('/api/products', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(product)
        });

        e.target.reset();
        loadProducts();
    });

    loadProducts();
</script>
